<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="245dp"
            android:layout_height="42dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/temperatureInput"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:hint="Enter the temperature" app:layout_constraintHorizontal_bias="0.518"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="36dp"/>
    <EditText
            android:layout_width="245dp"
            android:layout_height="42dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/currencyInput"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:hint="Enter the amount of money" app:layout_constraintHorizontal_bias="0.518"
            app:layout_constraintTop_toBottomOf="@+id/submitTemp" android:layout_marginTop="24dp"/>
    <TextView
            android:text="From"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/fromTemperature" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.661" app:layout_constraintTop_toBottomOf="@+id/temperatureInput"
            android:layout_marginTop="52dp"/>
    <TextView
            android:text="From"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="84dp" android:layout_marginStart="84dp"
            app:layout_constraintTop_toBottomOf="@+id/currencyInput" android:layout_marginTop="32dp"
            app:layout_constraintEnd_toStartOf="@+id/fromCurrency" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Convert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/submitTemp"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            android:layout_marginTop="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="84dp" android:layout_marginStart="84dp"
    />
    <Button
            android:text="Convert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/submitCurr"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="80dp" android:layout_marginStart="80dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8" android:layout_marginTop="24dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Result: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/resultTextView"
            app:layout_constraintTop_toBottomOf="@+id/toTemperature" android:layout_marginTop="36dp"
            android:textSize="18sp" app:layout_constraintStart_toEndOf="@+id/submitTemp"
            android:layout_marginLeft="48dp" android:layout_marginStart="48dp"/>
    <TextView
            android:text="Result: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/resultTextView2"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/submitCurr" app:layout_constraintTop_toBottomOf="@+id/toCurrency"
            android:layout_marginLeft="48dp" android:layout_marginTop="28dp" android:layout_marginStart="48dp"/>
    <Spinner
            android:layout_width="160dp"
            android:layout_height="42dp" android:id="@+id/toTemperature"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp" app:layout_constraintTop_toBottomOf="@+id/fromTemperature"
            android:layout_marginTop="40dp"/>
    <TextView
            android:text="To"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@+id/fromTemperature" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.573"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="48dp"/>
    <TextView
            android:text="To"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView8"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="80dp" android:layout_marginStart="80dp"
            app:layout_constraintTop_toBottomOf="@+id/textView7" android:layout_marginTop="44dp"
            app:layout_constraintEnd_toStartOf="@+id/toCurrency" app:layout_constraintHorizontal_bias="0.028"/>
    <Spinner
            android:layout_width="160dp"
            android:layout_height="42dp" android:id="@+id/fromTemperature"
            app:layout_constraintTop_toBottomOf="@+id/temperatureInput"
            android:layout_marginTop="36dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp"/>
    <Spinner
            android:layout_width="160dp"
            android:layout_height="42dp" android:id="@+id/fromCurrency"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp" app:layout_constraintTop_toBottomOf="@+id/currencyInput"
            android:layout_marginTop="24dp"/>
    <Spinner
            android:layout_width="160dp"
            android:layout_height="42dp" android:id="@+id/toCurrency"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp"
            app:layout_constraintTop_toBottomOf="@+id/fromCurrency" android:layout_marginTop="24dp"/>
    <TextView
            android:text="Astana:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/astanaTime"
            android:textSize="18sp" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="84dp"
            android:layout_marginStart="84dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/submitCurr"/>
    <TextView
            android:text="Mockow:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/moskowTime"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/resultTextView2" android:layout_marginTop="40dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="80dp"
            android:layout_marginRight="80dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>